upstream IMMICH_ML {
    server 10.0.0.5:3003;
    server 172.18.0.5:3003 backup;
    server 10.0.0.3:3003 backup;
}

server {
    listen 80;
    server_name immich-ml.home.arpa;

    # Block access to hidden files and directories (including subdirectories)
    location ~ /\. {
        return 404;
    }

    location / {
        proxy_pass http://IMMICH_ML;

        # Standard headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}