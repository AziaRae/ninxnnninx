server {
    listen 443 ssl;
    listen [::]:443 ssl;
    
    # Enable HTTP/2 and HTTP/3
    http2 on;
    http3 on;
    
    listen 443 quic reuseport;
    listen [::]:443 quic reuseport;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_early_data on;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    
    # Modern HTTP settings
    keepalive_requests 1000;
    lingering_timeout 5s;
    
    # Enable QUIC and HTTP/3
    quic_retry on;
    quic_gso on;
    add_header Alt-Svc 'h3=":443"; ma=86400';
    
    ssl_certificate /etc/nginx/ssl/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/key.pem;
    ssl_dhparam /etc/nginx/dhparam.pem; 
    ssl_verify_client on;
    ssl_client_certificate /etc/nginx/ssl/cloudflare.crt;
    server_name serv.imnot.uk;

    gzip on;
    gunzip on;
    gzip_static on;

    # Enable logging for dockge
    access_log /var/log/nginx/dockge_access.log main;
    error_log /var/log/nginx/dockge_error.log;
    
    location / {
        proxy_pass http://127.0.0.1:5004;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Add connection upgrade headers for better HTTP/2 support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # proxy_cache my_cache;
        # proxy_cache_use_stale error timeout http_500 http_502 http_503 http_504;
        # proxy_cache_valid 200 60m;

        # add_header Cache-Control "private, no-store, no-cache, must-revalidate, proxy-revalidate";
    }

    # # Static assets caching
    # location ~* \.(css|js|jpg|jpeg|png|gif|ico|webp|svg)$ {
    #     expires 7d;
    #     add_header Cache-Control "public, max-age=604800";
    # }
}

